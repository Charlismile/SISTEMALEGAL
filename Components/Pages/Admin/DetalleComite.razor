@page "/comite/{Id:int}"
@using SISTEMALEGAL.Models.DTOs
@using SISTEMALEGAL.Services.Interfaces
@inject IComiteRepository ComiteRepo
@inject NavigationManager NavManager

<PageTitle>Detalle del Comité</PageTitle>

<div class="container py-5">
    @if (comite == null)
    {
        <div class="text-center">
            <div class="spinner-border text-secondary" role="status"></div>
            <p class="mt-3">Cargando datos del comité...</p>
        </div>
    }
    else
    {
        <div class="mx-auto col-lg-8">
            <div class="card shadow rounded-4">
                <div class="card-body">
                    <h3 class="card-title text-center text-primary mb-4">@comite.ComiteSalud</h3>

                    <div class="row mb-3">
                        <div class="col-md-6"><strong>Corregimiento:</strong> @comite.Corregimiento</div>
                        <div class="col-md-6"><strong>Distrito:</strong> @comite.Distrito</div>
                        <div class="col-md-6"><strong>Provincia:</strong> @comite.Provincia</div>
                        <div class="col-md-6"><strong>Región de Salud:</strong> @comite.RegionSalud</div>
                        <div class="col-md-6"><strong>Comunidad:</strong> @comite.Comunidad</div>
                        <div class="col-md-6"><strong>Tipo de Trámite:</strong> @comite.TipoTramite</div>
                        <div class="col-md-6"><strong>Fecha de Elección:</strong> @(comite.FechaEleccion.ToString("dd/MM/yyyy"))</div>
                        <div class="col-md-6"><strong>Fecha de Creación:</strong> @(comite.FechaCreacion.ToString("dd/MM/yyyy"))</div>
                    </div>

                    @if (comite.Miembros is not null && comite.Miembros.Any())
                    {
                        <hr />
                        <h5 class="text-success">Miembros del Comité</h5>
                        <ul class="list-group list-group-flush mb-3">
                            @foreach (var m in comite.Miembros)
                            {
                                <li class="list-group-item">@m.Nombre - @m.Cedula <span class="text-muted">(@m.Cargo)</span></li>
                            }
                        </ul>
                    }

                    @if (comite.JuntaInterventoras is not null && comite.JuntaInterventoras.Any())
                    {
                        <hr />
                        <h5 class="text-warning">Junta Interventora</h5>
                        <ul class="list-group list-group-flush mb-3">
                            @foreach (var j in comite.JuntaInterventoras)
                            {
                                <li class="list-group-item">@j.Nombre - @j.Cedula</li>
                            }
                        </ul>
                    }

                    <div class="text-end mt-4">
                        <button class="btn btn-secondary me-2" @onclick="Volver">Volver</button>
                        <button class="btn btn-warning" @onclick="Editar">Editar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private ComiteDto? comite;

    protected override async Task OnInitializedAsync()
    {
        comite = await ComiteRepo.GetByIdAsync(Id);
    }

    private void Volver() => NavManager.NavigateTo("/comites");
    private void Editar() => NavManager.NavigateTo($"/editar-comite/{Id}");
}
