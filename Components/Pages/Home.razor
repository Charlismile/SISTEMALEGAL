@page "/"
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Inicio</PageTitle>

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container py-5">
        <h2 class="text-center mb-5 display-6 fw-semibold text-primary">Seleccione el tipo de organización</h2>

        <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
            <!-- Card Comite -->
            <div class="col">
                <div class="card h-100 border-success shadow-sm">
                    <div class="card-header bg-success text-white text-center py-3">
                        <h4 class="mb-0">Comité</h4>
                    </div>
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title mb-3">Comité <small class="text-muted">de Salud</small></h5>
                        <i class="bi bi-people-fill display-4 text-success mb-3"></i>
                        <p class="card-text flex-grow-1">
                            Grupo de personas, usualmente residentes de una comunidad, que se organizan para promover, orientar,
                            planificar, implementar y evaluar programas de salud pública.
                        </p>
                        <a class="btn btn-success mt-3 w-100" href="/registrar-comite">Registrar</a>
                    </div>
                </div>
            </div>

            <!-- Card Asociacion -->
            <div class="col">
                <div class="card h-100 border-info shadow-sm">
                    <div class="card-header bg-info text-white text-center py-3">
                        <h4 class="mb-0">Asociación</h4>
                    </div>
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title mb-3">Asociación <small class="text-muted">Sin Fines de Lucro</small></h5>
                        <i class="bi bi-people display-4 text-info mb-3"></i>
                        <p class="card-text flex-grow-1">
                            Entidad legal que se crea con el objetivo de realizar actividades de beneficio social o interés público,
                            sin la intención de generar ganancias para distribuir entre sus miembros.
                        </p>
                        <a class="btn btn-info mt-3 w-100" href="/registrar-asociacion">Registrar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
